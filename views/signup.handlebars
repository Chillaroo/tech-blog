<form id="sign-up-form">
    <div class="form-group">
        <label class="d-block text-light bg-dark">Sign Up</label>
        <label>Username</label>
        <input type="text" class="form-control" id="new-user-name" aria-describedby="emailHelp"
            placeholder="Enter Username">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" id="new-password" placeholder="Password">
    </div>
    <button type="submit" id="sign-up" class="btn btn-dark">Sign Up!</button>
    <br>
    <label>Login Instead</label>
</form>

